#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules/yamljs/bin/yaml2json/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules/yamljs/bin/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules/yamljs/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules:/home/nxtwave/nodejs/coding-practices/node_modules:/home/nxtwave/nodejs/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../yamljs/bin/yaml2json" "$@"
else 
  exec node  "$basedir/../yamljs/bin/yaml2json" "$@"
fi
