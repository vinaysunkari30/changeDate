#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules/needle/bin/needle/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules/needle/bin/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules/needle/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-2a/node_modules:/home/nxtwave/nodejs/coding-practices/node_modules:/home/nxtwave/nodejs/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../needle/bin/needle" "$@"
else 
  exec node  "$basedir/../needle/bin/needle" "$@"
fi
